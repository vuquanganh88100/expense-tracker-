<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="574.0" prefWidth="699.0" style="-fx-background-color: #ffffff;" stylesheets="@style/category.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ltnc.CategoryController">
    <children>
        <TableView fx:id="categoryTableView" layoutX="14.0" layoutY="76.0" prefHeight="474.0" prefWidth="672.0" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 8, 0, 0, 2);">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="58.0" style="-fx-alignment: center;" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="192.0" style="-fx-alignment: center-left;" text="Category Name" />
                <TableColumn fx:id="typeColumn" prefWidth="165.0" style="-fx-alignment: center-left;" text="Category Type" />
                <TableColumn fx:id="actionColumn" prefWidth="197.0" style="-fx-alignment: center;" text="Action" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <Button layoutX="14.0" layoutY="24.0" mnemonicParsing="false" onAction="#addCategory" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-background-radius: 4;" text="Add new category" />
    </children>
</AnchorPane>
